#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
BOILER_PATH=File.expand_path(__FILE__)
BOILER_LIBRARY_PATH = Pathname.new(__FILE__).realpath.dirname.parent.join("Library/Boiler").to_s
$:.unshift(BOILER_LIBRARY_PATH + '/Resources')
$:.unshift(BOILER_LIBRARY_PATH)
require 'global'
require 'utils'


case ARGV.first when 'help', '-h', '-?', '--help', nil
	require "cmd/help"
	Boiler.help
	exit ARGV.first ? 0 : 1
when 'version', '-v', '--version'
	puts BOILER_VERSION
when 'create', '-c', '--create', 'c'
	require 'cmd/create'
	PROJECT_TYPE = ARGV[1]
	PROJECT_NAME = ARGV[2]
	Boiler.create
when 'serve', '--server', 's'
	require 'cmd/serve'
	PROJECT_TYPE = ARGV[1]
	PROJECT_NAME = ARGV[2]
	Boiler.serve
end